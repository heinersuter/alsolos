<Application x:Class="Alsolos.Photo.Renamer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Alsolos.Commons.Mvvm.Converters;assembly=Alsolos.Commons"
             xmlns:resources="clr-namespace:Alsolos.Commons.Resources;assembly=Alsolos.Commons"
             StartupUri="MainView.xaml" Startup="OnApplicationStartup" Exit="OnApplicationExit">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <resources:SharedResourceDictionary Source="/View/Infra/HeaderedContentControlStyles.xaml" />
                <resources:SharedResourceDictionary Source="/View/Infra/ItemsControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToInverseBoolConverter x:Key="BoolToInverseBoolConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
