<Window x:Class="Alsolos.Commons.UnitTest.Controls.FindInSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tests="clr-namespace:Alsolos.Commons.UnitTest.Controls.FindInSelector"
        xmlns:findInSelector="clr-namespace:Alsolos.Commons.Controls.FindInSelector;assembly=Alsolos.Commons"
        Title="MainWindow" Height="256" Width="512">

    <Window.DataContext>
        <tests:MainViewModel/>
    </Window.DataContext>

    <DockPanel>

        <TextBlock DockPanel.Dock="Bottom" Text="{Binding SelectedItem}" Margin="8"/>

        <findInSelector:FindInSelector FilterCallback="{Binding Filter}" Margin="8">
            <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="True" SelectionChanged="OnSelectorSelectionChanged"/>
        </findInSelector:FindInSelector>

    </DockPanel>
</Window>
