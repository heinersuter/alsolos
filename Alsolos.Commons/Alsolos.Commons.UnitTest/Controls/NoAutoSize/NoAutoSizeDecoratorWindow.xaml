<Window x:Class="Alsolos.Commons.UnitTest.Controls.NoAutoSize.NoAutoSizeDecoratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:noAutoSize="clr-namespace:Alsolos.Commons.Controls.NoAutoSize;assembly=Alsolos.Commons"
        Title="NoAutoSizeDecorator Test" SizeToContent="WidthAndHeight">

    <Window.Resources>
        <ResourceDictionary Source="/Alsolos.Commons;component/Styles/Styles.xaml"/>
    </Window.Resources>

    <ScrollViewer>
        <noAutoSize:NoAutoSizeDecorator MinWidth="256" MinHeight="128">
            <TextBox Text="Hello" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="32"/>
        </noAutoSize:NoAutoSizeDecorator>
    </ScrollViewer>

</Window>
