<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Alsolos.Commons.Log"
                    xmlns:progress="clr-namespace:Alsolos.Commons.Controls.Progress"
                    xmlns:converters="clr-namespace:Alsolos.Commons.Mvvm.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Alsolos.Commons;component/Controls/SimpleStretchPanel/SimpleStretchPanelStyles.xaml"/>
        <ResourceDictionary Source="/Alsolos.Commons;component/Controls/FindInSelector/FindInSelectorStyles.xaml"/>
        <ResourceDictionary Source="/Alsolos.Commons;component/Controls/Progress/Templates.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:LogEventList}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LogEventList}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
