<Window x:Class="Alsolos.AttendanceRecorder.TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:testClient="clr-namespace:Alsolos.AttendanceRecorder.TestClient"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <testClient:MainViewModel/>
    </Window.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Get" Command="{Binding GetIntervalsCommand}" MinWidth="60" Margin="8"/>
        <Button Content="Signal" Command="{Binding SendLifeSignalCommand}" MinWidth="60" Margin="8"/>
    </StackPanel>
</Window>
