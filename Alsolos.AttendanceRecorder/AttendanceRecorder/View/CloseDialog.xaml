<Window x:Class="AttendanceRecorder.View.CloseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Terminate or minimize?" Height="160" Width="560">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="0" Source="images/Annotate_Help.ico" Margin="8" Width="64" Height="64" />
        <TextBlock Grid.Column="1" Text="Do you want to minimize the application to the system tray instead of terminating?" VerticalAlignment="Center" Margin="8" />
        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Minimize" Width="80" Margin="8" Height="28" IsDefault="True" Click="MinimizeClick" />
            <Button Content="Terminate" Width="80" Margin="8" Height="28" Click="TerminateClick" />
        </StackPanel>
    </Grid>
</Window>
